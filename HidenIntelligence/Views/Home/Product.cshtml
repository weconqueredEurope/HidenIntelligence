@model HidenIntelligence.Areas.Admin.Models.SanPham


<!-- page -->
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    <a href="/Home/Index">Trang chủ</a>
                    <i>|</i>
                </li>
                <li>Sản phẩm</li>
            </ul>
        </div>
    </div>
</div>
<!-- //page -->
<!-- Single Page -->
<div class="banner-bootom-w3-agileits py-5">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>S</span>ản phẩm
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <div class="col-lg-5 col-md-8 single-right-left ">
                <div class="grid images_3_of_2">
                    <div class="flexslider">
                        <ul class="slides">
                            <li data-thumb="/Content/assets/images/@Model.HinhAnh1">
                                <div class="thumb-image">
                                    <img src="/Content/assets/images/@Model.HinhAnh1" data-imagezoom="true" class="img-fluid" alt="">
                                </div>
                            </li>
                            <li data-thumb="/Content/assets/images/@Model.HinhAnh2">
                                <div class="thumb-image">
                                    <img src="/Content/assets/images/@Model.HinhAnh2" data-imagezoom="true" class="img-fluid" alt="">
                                </div>
                            </li>
                            <li data-thumb="/Content/assets/images/@Model.HinhAnh3">
                                <div class="thumb-image">
                                    <img src="/Content/assets/images/@Model.HinhAnh3" data-imagezoom="true" class="img-fluid" alt="">
                                </div>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 single-right-left simpleCart_shelfItem">
                <h3 class="mb-3">@Model.TenSP</h3>
                <p class="mb-3">
                    <span class="item_price">@Model.DonGia VNĐ</span><br />
                    @*<del class="mx-2 font-weight-light">Giá gốc</del>*@
                    <label>Vận chuyển</label>
                </p>
                <div class="single-infoagile">
                    <ul>
                        <li class="mb-3">
                            COD
                        </li>
                        <li class="mb-3">
                            Shipping Speed to Delivery.
                        </li>
                    </ul>
                </div>
                <div class="product-single-w3l">
                    <p class="my-3">
                        <i class="far fa-hand-point-right mr-2"></i>
                        <label>Bảo hành</label> 1 năm
                    </p>
                    <ul>
                        <li class="mb-1">
                            @Html.Raw(@Model.MoTa)
                        </li>
                        
                    </ul>
                    <p class="my-sm-4 my-3">
                        <i class="fas fa-retweet mr-3"></i>Chuyển khoản qua Credit/ Debit/ ATM card
                    </p>
                </div>
                <div class="occasion-cart">
                    <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                        <form action="#" method="post">
                            <fieldset>
                                <input type="hidden" name="cmd" value="_cart" />
                                <input type="hidden" name="add" value="1" />
                                <input type="hidden" name="business" value=" " />
                                <input type="hidden" name="item_name" value="@Model.TenSP" />
                                <input type="hidden" name="amount" value="@Model.DonGia" />
                                <input type="hidden" name="discount_amount" value="" />
                                <input type="hidden" name="currency_code" value="VND" />
                                <input type="hidden" name="return" value=" " />
                                <input type="hidden" name="cancel_return" value=" " />
                                <a class="button" href="/Cart/AddItem/@Model.MaSP?ReturnURL = @Request.RawUrl">Thêm vào giỏ</a>
                                @*<input type="submit" name="submit" value="Thêm vào giỏ" class="button" />*@
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //Single Page -->
<!-- imagezoom -->
<script src="~/Content/assets/js/imagezoom.js"></script>
<!-- //imagezoom -->
<!-- flexslider -->
@*<link rel="stylesheet" href="~/Content/assets/css/flexslider.css" type="text/css" media="screen" />*@

<script src="~/Content/assets/js/jquery.flexslider.js"></script>
<script>
    // Can also be used with $(document).ready()
    $(window).load(function () {
        $('.flexslider').flexslider({
            animation: "slide",
            controlNav: "thumbnails"
        });
    });
</script>
